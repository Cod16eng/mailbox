<!DOCTYPE html>
<html>
  <head>
    <title>Mailbox</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>  	
	  	<% unless controller_name == 'welcome' || controller_name == 'sessions' %>
	  	  <%= render 'layouts/navbar' %>
	  	<% end %>  	
  	<main>
	  	<div class="container">
	  		<%= render 'layouts/flashmsg' %>
	      <%= yield %>
		</div>
	</main>
	
	<% unless controller_name == 'welcome' || controller_name == 'sessions' %>
	  <%= render 'layouts/footer' %>
	<% end %>
  </body>
</html>