<h1 class="center-align">Search Results</h1>

<div class="row">
	<div class="col s12 center-align"><%= link_to "Search again", new_search_path, class: 'waves-effect waves-light btn-small'%></div>
</div>

<table class="highlight">
	<thead>
	  <tr>
	  	  <th style="width:20%" >Company</th>
	      <th>Sender</th>
	      <th>Name</th>
	      <th>Received on</th>
	      <% if current_user.admin? %>	      	            
	        <th colspan="3" class="center-align">Actions</th>
	      <% end %>
	  </tr>
	</thead>

	<tbody>

<%= render @search.posts %>

	</tbody>
</table>
