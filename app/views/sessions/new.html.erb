
<div class="container">
	<div class="row center add-user-form">
		<div class="col s12 m12 l12">
			<div class="card-panel ">
				<h3 class="header">Log in</h3>
				<div class="row">        
					<%= form_for(:sessions, html: {class: "col s12" }) do |f| %>
						
						<div class="row">
							<div class="input-field col s12">	
								<%= f.email_field :email, placeholder: "Email Address" %>		
							</div>
						</div>
						<div class="row">
							<div class="input-field col s12">	
								<%= f.password_field :password, placeholder: "Enter Password" %>
							</div>
						</div>
						
						<div class="row">
							<div class="input-field col s12">
						<%= f.button '<i class="material-icons right">arrow_forward</i>Log In'.html_safe,  class: 'waves-effect waves-light btn-small' %>
							</div>
						</div>
					<% end %>
				</div>				
			</div>
		</div>
	</div>
</div>